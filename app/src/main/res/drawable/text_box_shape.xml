<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"   >
            <gradient android:startColor="#DD000000" android:endColor="#e9e9e9" android:angle="90"></gradient>
            <stroke
                android:width="2dp"
                android:color="#C4CDE0" >
            </stroke>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>
            <corners
                android:radius="11dp"   >
            </corners>
        </shape>
    </item>



    <item android:state_pressed="false">
        <shape android:shape="rectangle"   >
            <gradient android:startColor="#D2691E00" android:endColor="#e9e9e9" android:angle="90"></gradient>
            <stroke
                android:width="2dp"
                android:color="#C4CDE0" >
            </stroke>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>
            <corners
                android:radius="11dp"   >
            </corners>
        </shape>
    </item>


</selector>
